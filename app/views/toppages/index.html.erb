<% if logged_in? %>

  <div class="row">
    
    <div class="col-sm-4">
      <%= render "layouts/object_profile", obj: current_user %>
      <%= render "layouts/post_form", model: @timeline %>
    </div>
    <div class="col-sm-offset-1 col-sm-7">
      <%= render "timelines/timelines", timelines: @timelines %>
    </div>
  </div>

  
  
  
  
<% else %>
  <%= content_for :introduce do %>
    <div class="introduce">
      <div class="introduce-inner">
        <div class="introduce-contents">
          <div class="text-center">
            <h1>PETでつながる</h1>
          </div>
        </div>
      </div>
    </div>
  
  <% end %>
  
  <div class="toppage_info text-center">
    <h2>自分のペットをたくさんの人に見てもらおう。</h2>
    <h3>かわいいペットの写真を投稿</h3>
    <h3>飼い主さんのお友達をつくる</h3>
    
    <%= link_to "ログイン", login_path, class:"btn btn-success btn-lg" %>
    
    
  </div>
<% end %>