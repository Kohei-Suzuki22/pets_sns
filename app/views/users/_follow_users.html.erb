<% if users.any? %>

  <ul class="media-list">
      <div class="follow_users_list">
    <% users.each do |user| %>
    
        
      <li class="media">
        <div class="media-left follow_user_image">  
          <%= render "layouts/icon_img", obj: user %>
        </div>
        <div class="media-body">
        <div>
          <h3><%= user.name %></h3>
          <div class="follow_user_show_profile">
            <%= link_to "プロフィール",user_path(user),class:"btn btn-primary" %>
          </div>
        </div>
        <!--<div>-->
        <!--</div>-->
      </div>
    </li>
    
    <% end %>
      </div>
  </ul>

<% end %>