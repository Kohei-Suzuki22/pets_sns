<% @users.each do |user| %>
  <div class="row a_user">
    
    <div class="col-sm-4 user_profile">
      <%= render "layouts/object_profile", obj: user %>
      <% unless current_user == user %>
        <div class="text-center">
          <%= render "friendships/follow_button", user: user %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <% user.pets.each do |pet| %>
          <div class="col-md-4 pets_profile">
            <div class="icon text-center">
              <%= render "layouts/icon_img", obj: pet %>

              <div class="profile_name">
                <h1><%= pet.name %></h1>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row text-center show_profile">
        <%= link_to "ユーザプロフィール", user_path(user), class:"btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>