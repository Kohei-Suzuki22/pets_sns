<div class="row">
  
  <div class="col-md-4">
    <div class="text-center">
      <%= render "layouts/object_profile", obj: @pet %>
      <br>
      <%= link_to "このペットを登録から削除する", @pet, method: :delete, data:{confirm:"本当にリストから削除してよろしいですか?"},class:"btn btn-danger btn-xs" %>
      
    </div>
  </div>

  <div class="col-md-8">
    <div class="profile_form">
      
      <%= form_for(@pet) do |f| %>
        <%= render "layouts/error_messages", model: f.object %>
        
        <div class="form-group">
          <%= f.label :name, "お名前" %>
          <%= f.text_field :name, class:"form-control"%>
        </div>
  
        <div class="form-group">
          <%= f.label :profile, "プロフィール" %>
          <%= f.text_area :profile, class:"form-control", rows:5 %>
        </div>

        <div class="form-group">
          <%= f.label :image, "アイコン画像" %>
          <%= f.file_field :image %>
          <br>
          <p><%= f.check_box :remove_image %>現在のプロフィール画像をやめる</p>
        </div>
        
        <div class="form-group">
          <%= f.hidden_field :user_id, value:@user.id %>
        </div>
        
        <div class="text-right">
          <%= f.submit "edit", class:"btn btn-primary btn-lg" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
  
</div>